<!--編集画面のビュー-->


<h1>Editing Book</h1>
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

<div class="text_field">
<label>Title</label>
<%= f.text_field :title %>
</div>

<div class="text_area">
<label>Body</label>
<%= f.text_area :body %>
</div>

<!--Updateボタン-->
<div class="button">
<%= f.submit 'Update Book' %>
</div>

<% end %>

<a><%= link_to "Show", book_path(@book.id) %></a>
