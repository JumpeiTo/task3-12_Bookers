<!--編集画面のビュー-->


<h1>Editing Book</h1>
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div class="error">
  <h2 class="error-title">
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>


<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

<div class="container">
  
  <div class="title<%= ' field_with_errors' if @book.errors.has_key?(:title) %>">
    <label>Title</label>
  </div>
  
  <div class="title<%= ' field_with_errors' if @book.errors.has_key?(:title) %>">
    <%= f.text_field :title %>
  </div>
</div>

<div class="container">
  
  <div class="body<%= ' field_with_errors' if @book.errors.has_key?(:body) %>">
    <label>Body</label>
  </div>
  
  <div class="body<%= ' field_with_errors' if @book.errors.has_key?(:body) %>">
    <%= f.text_area :body %>
  </div>
</div>

<!--Updateボタン-->
<div class="button">
<%= f.submit 'Update Book' %>
</div>

<% end %>

<span><%= link_to "Show", book_path(@book.id) %></span>
<sapn>|</sapn>
<span><%= link_to "Back", "/books" %></span>

