<!--一覧と新規作成画面のビュー-->

<div class="notice">
    <%= flash[:notice] %>
</div>

<h1>Books</h1>
<table>
  <!--項目名-->
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <!--中身-->
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) , method: :get %></td>
    <td><%= link_to "Edit", edit_book_path(book.id), method: :get%></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>

  <% end %>
</table>


<h2>New Book</h2>
<!--エラーメッセージ-->

  <% if @book.errors.any? %>
  <div class="error">
  <h2 class="error-title">
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  
  
<%= form_with model: @books, url:'/books', method: :post do |f| %>

<div class="container">
  
  <div class="title<%= ' field_with_errors' if @book.errors.has_key?(:title) %>">
    <label>title</label>
  </div>
  
  <div class="title<%= ' field_with_errors' if @book.errors.has_key?(:title) %>">
    <%= f.text_field :title %>
  </div>
</div>

<div class="container">
  
  <div class="body<%= ' field_with_errors' if @book.errors.has_key?(:body) %>">
    <label>body</label>
  </div>
  
  <div class="body<%= ' field_with_errors' if @book.errors.has_key?(:body) %>">
    <%= f.text_area :body %>
  </div>
</div>

  
 <!--保存ボタン-->
  <div class="button">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
