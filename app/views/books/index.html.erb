<!--一覧と新規作成画面-->

<h1>Books</h1>
<table>
  <!--項目名-->
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <!--中身-->
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
  </tr>

  <% end %>
</table>


<h1>New Book</h1>
<%= form_with model: @book, url:'/books', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
 <!--保存ボタン-->
  <%= f.submit 'Create Book' %>

<% end %>
